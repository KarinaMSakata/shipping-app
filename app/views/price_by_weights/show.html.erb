<h1>Tabela <%= PriceByWeight.model_name.human %></h1>

<p><%= PriceByWeight.human_attribute_name(:min_weight) %>: <%= @price_by_weight.min_weight %>kg</p>
<p><%= PriceByWeight.human_attribute_name(:max_weight) %>: <%= @price_by_weight.max_weight %>kg</p>
<p><%= PriceByWeight.human_attribute_name(:price_per_km) %>: <%= number_to_currency(@price_by_weight.price_per_km) %></p>

<% if current_user.admin? %>
  <p><%= link_to 'Voltar para Tabela', price_by_weights_url %></p>
  <p><%= link_to 'Editar', edit_price_by_weight_url(@price_by_weight.id) %></p>
<% end %>